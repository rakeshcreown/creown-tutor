@model  CreownTutor.Models.ApplicationUser
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("EditProfile", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section class="">
        <div class="container">
            <div class="section-content">
                <div class="row">
                    <h2>Edit Profile<br /><br /></h2>
                    <div class="col-sx-12 col-sm-4 col-md-4">
                        <input type="file" name="file" id="file" style="width: 100%;" />
                        <br />
                    </div>
                    <div class="col-xs-12 col-sm-8 col-md-8">
                        <div class="icon-box mb-0 p-0">
                            <a href="#" class="icon icon-bordered icon-rounded icon-sm pull-left mb-0 mr-10">
                                <i class="fa fa-user"></i>
                            </a>
                            <h4 class="text-gray pt-10 mt-0 mb-30">Edit Profile</h4>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="form-group col-md-6">
                                @Html.HiddenFor(m => m.Id)
                                <label>Name</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "Please enter User Name")
                            </div>
                            @*<div class="form-group col-md-6">
                                    <label>Email</label>
                                    @Html.TextBoxFor(m => m.User.EmailAddress, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.User.EmailAddress, "Please enter Email")
                                </div>*@
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>Phone</label>
                                @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ContactNumber, "Please enter Phone")
                            </div>
                            <div class="form-group col-md-6">
                                <label>Date of Birth</label>
                                @Html.TextBoxFor(m => m.DateOfBirth, new { @id = "EnterDate", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.DateOfBirth, "Please enter Date of Birth")
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label>Location</label>
                                @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Location, "Please enter Location")
                            </div>
                        </div>
                        @*<div class="form-group">
                                <button class="btn btn-dark btn-lg mt-15" type="submit">Update</button>
                            </div>*@

                        <hr class="mt-70 mb-70">

                        <form name="editprofile-form" method="post">
                            <div class="icon-box mb-0 p-0">
                                <a href="#" class="icon icon-bordered icon-rounded icon-sm pull-left mb-0 mr-10">
                                    <i class="fa fa-key"></i>
                                </a>
                                <h4 class="text-gray pt-10 mt-0 mb-30">Change Password</h4>
                            </div>
                            <hr>
                            @*<div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Choose Password</label>
                                        @Html.TextBoxFor(m => m.UpdatedPassword, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Re-enter Password</label>
                                        @Html.TextBox("resetpassword", "", new { @class = "form-control", @id = "newpwd" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        <label>Old Password</label>
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                                    </div>
                                </div>*@
                            <div class="form-group">
                                <button class="btn btn-dark btn-lg mt-15" type="submit">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}